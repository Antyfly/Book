<Window x:Class="Book.General"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Book"
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        Title="General" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="#bab6c1" ResizeMode="NoResize" AllowsTransparency="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.20*"/>
            <ColumnDefinition Width="0.80*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="StackPanel1" Grid.RowSpan="3" Grid.Row="0" Grid.Column="0" Visibility="Hidden">
            <Button x:Name="Back" Grid.Column="0" Grid.Row="0" Style="{StaticResource ButtonStateMenu}" HorizontalAlignment="Right" Margin="0,4,3.667,100" Click="Back_Click" Height="31" Width="32">
                <Image Source="Image\back.png" Height="31"/>
            </Button>
            <Button x:Name="lk" Content="Личный кабинет" Style="{StaticResource ButtonStateMenu}" Click="lk_Click"/>
            <Button x:Name="Vixod" Content="Выход" Style="{StaticResource ButtonStateMenu}" Click="Vixod_Click"/>
        </StackPanel>
        <Button x:Name="Menu" Grid.Column="0" Grid.Row="0" Style="{StaticResource ButtonStateMenu}" Visibility="Visible" HorizontalAlignment="Left" Margin="4, 4, 13, 18" Click="Menu_Click">
            <Image Source="Image\menu.png"/>
        </Button>
        <StackPanel x:Name="StackPanel2" Grid.RowSpan="3" Grid.Row="1" Grid.Column="0" Visibility="Visible">
            <Button x:Name="lek1" Style="{StaticResource ButtonStateMenu}" Click="lek1_Click">Лекция 1</Button>
            <Button x:Name="lek2" Style="{StaticResource ButtonStateMenu}" Click="lek2_Click">Лекция 2</Button>
            <Button x:Name="lek3" Style="{StaticResource ButtonStateMenu}" Click="lek3_Click">Лекция 3</Button>
            <Button x:Name="lek4" Style="{StaticResource ButtonStateMenu}" Click="lek4_Click">Лекция 4</Button>
            <Button x:Name="lek5" Style="{StaticResource ButtonStateMenu}" Click="lek5_Click">Лекция 5</Button>
            <Button x:Name="lek6" Style="{StaticResource ButtonStateMenu}" Click="lek6_Click">Лекция 6</Button>
            <Button x:Name="lek7" Style="{StaticResource ButtonStateMenu}" Click="lek7_Click">Лекция 7</Button>
            <Button x:Name="lek8" Style="{StaticResource ButtonStateMenu}" Click="lek8_Click">Лекция 8</Button>
            <Button x:Name="lek9" Style="{StaticResource ButtonStateMenu}" Click="lek9_Click">Лекция 9</Button>
            <Button x:Name="lek10" Style="{StaticResource ButtonStateMenu}" Click="lek10_Click">Лекция 10</Button>
        </StackPanel>
        <ScrollViewer x:Name="scrollLecture" 
                          Grid.Column="1" 
                          Margin="10,4.8,10,9.6" 
                          VerticalScrollBarVisibility="Auto" Grid.Row="1" Grid.RowSpan="2" 
                      >
            <StackPanel x:Name="TextLect" Visibility="Hidden" >
                <TextBlock x:Name="TextLecture" Foreground="Black" FontSize="18" TextWrapping="Wrap"/>
                <Button x:Name="Enter" Content="Далее" Style="{StaticResource ButtonStateMenu}" Click="Enter_Click" />

            </StackPanel>
        </ScrollViewer>
        <StackPanel x:Name="Questions" Visibility="Hidden" Grid.Column="1" 
                          Margin="10,4.8,10,9.6"  Grid.Row="1" Grid.RowSpan="2"  >
            <TextBlock x:Name="question" FontFamily="Times New Roman" FontSize="20" FontWeight="Bold" Width="620" HorizontalAlignment="Left" />
            <RadioButton x:Name="answerBut1">
                <RadioButton.Content>
                    <TextBlock x:Name="answerButText1" TextWrapping="Wrap" Foreground="Black"/>
                </RadioButton.Content>
                <RadioButton.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                </RadioButton.LayoutTransform>
            </RadioButton>

            <RadioButton x:Name="answerBut2" FontSize="12" Foreground="Black">
                <RadioButton.Content>
                    <TextBlock x:Name="answerButText2" TextWrapping="Wrap" Foreground="Black"/>
                </RadioButton.Content>
                <RadioButton.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                </RadioButton.LayoutTransform>
            </RadioButton>

            <RadioButton x:Name="answerBut3" FontSize="12" Foreground="Black">
                <RadioButton.Content>
                    <TextBlock x:Name="answerButText3" TextWrapping="Wrap" Foreground="Black"/>
                </RadioButton.Content>
                <RadioButton.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                </RadioButton.LayoutTransform>
            </RadioButton>
            <Button x:Name="pas" Content="Проверить" Style="{StaticResource ButtonStateMenu}" Click="pas_Click" />
        </StackPanel>

        <StackPanel x:Name="StackPanel3" Orientation="Horizontal"/>
        <Button x:Name="Close" Click="Close_Click" Grid.Column="1" Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Style="{StaticResource ButtonStateMenu}">
            <Image Source="Image\close.png"/>
        </Button>
        <TextBlock x:Name="textTest" 
                       Margin="20,30,20,500" 
                       Grid.Column="1" 
                       Foreground="Black" 
                       FontSize="24" 
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Visibility="Hidden">
        </TextBlock>

    </Grid>
</Window>
